<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mealThumb"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image_meal"
            android:layout_width="130dp"
            android:layout_height="130dp"/>
        <View
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/shadow_for_love_white"
            android:layout_width="30dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/love"
            android:src="@drawable/ic_favorite_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            tools:ignore="NewApi"
            app:tint="@color/colorAccent" />
        <TextView
            android:text="@string/meal_categories"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center"
            android:maxLines="2"
            android:textStyle="bold"
            android:ellipsize="end"
            android:id="@+id/mealName"
            android:layout_toRightOf="@id/mealThumb"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvTenNhaHang"
            android:text="Nhà hàng Ánh Sao"
            android:textSize="12dp"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center"
            android:maxLines="2"
            android:textStyle="italic"
            android:ellipsize="end"
            android:layout_toRightOf="@id/mealThumb"
            android:layout_below="@id/mealName"
            android:layout_marginLeft="10dp"

            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvKhoangCach"
            android:text="2.3 km"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center"
            android:maxLines="2"
            android:textStyle="bold|italic"
            android:ellipsize="end"
            android:layout_toRightOf="@id/mealThumb"
            android:layout_below="@id/tvTenNhaHang"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvDiaChiNhaHang"
            android:text="80/09 đường số 3, Gò Vấp,Hồ Chí Minh"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/mealThumb"
            android:layout_below="@id/tvKhoangCach"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>